  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2020",
    "module": "es2020",
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules/**"]
}